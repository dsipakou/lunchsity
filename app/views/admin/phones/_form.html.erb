<%= form_for(@phone) do |f| %>
  <div class="column-left">
    <% if @phone.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@phone.errors.count, "error") %> prohibited this phone from being saved:</h2>

        <ul>
        <% @phone.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.text_field :number, placeholder: "Номер телефона или факса" %>
    </p>
    <p>
      <%= f.text_field :operator, placeholder: "Оператор связи" %>
    </p>
  </div>
  <div class="column-right">
    <p>
      <%= f.select :phonetype, options_for_select(["Phone", "Fax"]) %>
    </p>
  </div>
  <div class="clear"></div>
  <div class="action_bar">
    <%= f.submit "Сохранить", class: "button blue" %>
    <%= link_to 'Назад', phones_path %>
  </div>
<% end %>